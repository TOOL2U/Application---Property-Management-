# Environment Variables for Sia Moon Property Management App
# Copy this file and rename to .env.local, then fill in your actual values

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these from your Firebase project settings
# https://console.firebase.google.com/project/YOUR_PROJECT/settings/general

EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# =============================================================================
# GOOGLE MAPS (for react-native-maps)
# =============================================================================
# Get API key from Google Cloud Console
# https://console.cloud.google.com/apis/credentials

EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# EXPO PUSH NOTIFICATIONS
# =============================================================================
# These are automatically handled by Expo, but you can override if needed

# EXPO_PUBLIC_PUSH_ENDPOINT=https://exp.host/--/api/v2/push/send

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'true' to enable Firebase emulators for local development

EXPO_PUBLIC_USE_FIREBASE_EMULATOR=false
EXPO_PUBLIC_FIREBASE_EMULATOR_HOST=localhost

# =============================================================================
# WEB APP API INTEGRATION
# =============================================================================
# Your existing web application API endpoints

# Main API base URL (replace with your actual web app API URL)
EXPO_PUBLIC_API_BASE_URL=https://your-web-app.com/api

# Authentication endpoints
EXPO_PUBLIC_AUTH_LOGIN_ENDPOINT=/auth/login
EXPO_PUBLIC_AUTH_REFRESH_ENDPOINT=/auth/refresh

# Booking/Task endpoints
EXPO_PUBLIC_BOOKINGS_ENDPOINT=/bookings
EXPO_PUBLIC_TASKS_ENDPOINT=/tasks
EXPO_PUBLIC_PROPERTIES_ENDPOINT=/properties
EXPO_PUBLIC_STAFF_ENDPOINT=/staff

# Real-time updates (if your web app supports WebSocket)
EXPO_PUBLIC_WEBSOCKET_URL=wss://your-web-app.com/ws

# API Authentication
# If your web app uses API keys for mobile clients
EXPO_PUBLIC_API_KEY=your_mobile_api_key_here

# If your web app uses JWT tokens
EXPO_PUBLIC_JWT_SECRET=your_jwt_secret_here

# =============================================================================
# THIRD-PARTY SERVICES (add as needed)
# =============================================================================
# Weather API (if you add weather features)
# EXPO_PUBLIC_WEATHER_API_KEY=your_weather_api_key

# Analytics (if you add analytics)
# EXPO_PUBLIC_ANALYTICS_ID=your_analytics_id

# =============================================================================
# NOTES:
# =============================================================================
# 1. Variables starting with EXPO_PUBLIC_ are available in your app code
# 2. Never commit this file with real values to version control
# 3. Add .env.local to your .gitignore file
# 4. For production, set these in your hosting platform's environment settings
